<% provide(:title, "Home") %>

<div id="map">
</div>

<div class="d-flex">
  <div class="flex-fill">
    <%= link_to "My list", "#", class: 'btn btn-outline-primary btn-lg btn-block toggler', data: { target: 'degree-filter' } %>
  </div>
  <div class="flex-fill">
    <%= link_to "All friends", "#", class: 'btn btn-outline-primary btn-lg btn-block toggler', data: { target: 'friend-filter' } %>
  </div>
</div>

<!-- <a href="whatsapp://send?text=Here is my Food King list for you: <%#= list_url(@link.token) %>" data-action="share/whatsapp/share">Share via Whatsapp</a> -->

<div class="container my-3 overflow-auto panel active" style="height: 35vh;">
  <% current_user.restaurants.each do |resto| %>
    <%= render "restaurants/restaurant_card", resto: resto, link: true %>
  <% end %>
</div>

<%= render 'shared/filter/degree-filter' %>
<%= render 'shared/filter/friend-filter' %>

<div class="footer">
  <div class="footer-btn footer-btn-left ">
    <div class="text-centerfooter-button-link">
      <%= link_to restaurants_path, class: "footer-button-link" do %>
        Add a Restaurant
      <% end %>
    </div>
  </div>
  <div class="footer-btn footer-btn-right ">
    <a href="whatsapp://send?text=<%=  %>" data-action="share/whatsapp/share">
      <i class="mr-1 fas fa-share"></i>Share your list
    </a>
  </div>
</div>




<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV["GOOGLE_API_KEY"]}", defer: true %>
